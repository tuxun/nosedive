<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nosedive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/OurGray"
    tools:context=".FullscreenActivity"

    >

    <LinearLayout
        android:id="@+id/windowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_marginTop="10dp"
        android:fitsSystemWindows="true"

        android:orientation="vertical">
      <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@android:drawable/star_big_off"
            android:max="100"
          android:visibility="gone"
            android:id="@+id/seekBar"

            android:progress="50"
            ></SeekBar>
        <LinearLayout
            android:id="@+id/debug_content_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"

            >


            <ProgressBar
                android:id="@+id/progressbar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ProgressBar
                android:id="@+id/DLprogressbar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/OurBlue"
                android:progressTint="@color/colorAccent"
                android:secondaryProgressTint="@color/OurPink"
                android:tintMode="src_over"


                />

            <TextView
                android:id="@+id/DLprogress_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dlinprogress" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/leftmenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
android:visibility="gone"

                android:orientation="vertical"></LinearLayout>


            <LinearLayout
                android:id="@+id/fullscreen_mumcontent_controls"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="top"


                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_dialog_alert"
                    android:contentDescription="@string/photoportrait_de_julia" />

                <TextView
                    android:id="@+id/pressme_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textSize="30sp"
                    android:fontFamily="@font/alef"
                    android:text="@string/string_press_me"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightmenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                                android:layout_weight="1"

                android:layout_margin="5dp"
android:visibility="gone"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_content_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:layout_gravity="bottom"

        >
        <TextView
            android:id="@+id/press2buttons_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:visibility="gone"
              android:layout_weight="5"

            android:text="@string/string_choose2word"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>
