<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nosedive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context=".FullscreenActivity"
    >

    <LinearLayout
        android:id="@+id/windowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/OurGray"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/debug_content_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <ProgressBar
                android:id="@+id/progressbar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ProgressBar
                android:id="@+id/DLprogressbar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="@color/OurBlue"
                android:progressTint="@color/colorAccent"
                android:secondaryProgressTint="@color/OurPink"
                android:tintMode="src_over"


                />

            <TextView
                android:id="@+id/DLprogress_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dlinprogress" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/leftmenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
android:visibility="gone"
                android:layout_weight="1"
                android:gravity="center"


                android:orientation="vertical"></LinearLayout>


            <LinearLayout
                android:id="@+id/fullscreen_mumcontent_controls"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                    android:layout_gravity="center_horizontal"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitStart"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icone_appli2"
                    android:contentDescription="@string/photoportrait_de_julia" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightmenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                                android:layout_weight="1"
                android:gravity="center"

                android:layout_margin="5dp"
android:visibility="gone"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/bottom_content_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:layout_gravity="bottom"
        android:background="@color/OurPink"
            android:layout_marginBottom="-00dp"

        >
        <LinearLayout
            android:id="@+id/fakelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="20dp"

            android:layout_margin="5dp"

            >
        </LinearLayout>
        <TextView
            android:id="@+id/pressme_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:textSize="30sp"
            android:text="@string/string_press_me"

            />

    </LinearLayout>

</FrameLayout>
