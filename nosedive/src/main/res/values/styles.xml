<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here.
    <item name="colorPrimary">@color/OurSecondaryViolet</item>
    <item name="colorPrimaryDark">@color/OurPink</item>
    <item name="colorAccent">@color/colorAccent</item> -->


    <item name="windowActionBarOverlay">true</item>
    <item name="android:windowBackground">@null</item>
    <item name="colorPrimary">@color/OurWhite</item>
    <item name="buttonStyle">?attr/borderlessButtonStyle</item>
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="background">@color/OurWhite</item>
  </style>

  <style name="AppTheme.WhiteAccent">
    <item name="colorAccent">@color/OurWhite</item> <!-- Whatever color you want-->
    <item name="android:solidColor">@color/OurWhite</item> <!-- Whatever color you want-->
    <item name="buttonStyle">?attr/borderlessButtonStyle</item> <!-- Whatever color you want-->
    <item name="android:shadowColor">@color/OurWhite</item> <!-- Whatever color you want-->
    <item name="android:textColor">@color/OurBlack</item> <!-- Whatever color you want-->
    <item name="android:color">@color/OurWhite</item> <!-- Whatever color you want-->


  </style>

  <style name="AppTheme.Borderless">
    <item name="buttonStyle">?attr/borderlessButtonStyle</item> <!-- Whatever color you want-->
    <item name="android:shadowColor">@color/OurWhite</item> <!-- Whatever color you want-->

  </style>
</resources>
